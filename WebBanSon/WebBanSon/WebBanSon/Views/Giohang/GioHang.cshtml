@using WebBanSon.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/Layoutnguoidung.cshtml";
}


<h2 style="text-align:center;color:#000000">THÔNG TIN GIỎ HÀNG</h2>


<table align="center" border="1">

    <tr style="text-align:center;font-weight:bold;color:#000000">
        <td> Mã Son</td>
        <td>Tên Son</td>
        <td>Ảnh Bìa</td>
        <td>Số Lượng</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>

    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold;color:#000000">
            <td>@item.iMason</td>
            <td>@item.sTenson</td>
            <td><img src="~/HinhSP/@item.sAnhbia" style="width:10%"></td>
            @using (Html.BeginForm("CapNhatGiohang", "Giohang", new { @iMaSP = item.iMason }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow" />
                </td>

                <td>@String.Format("{0:0,0}", @item.dDongia)</td>
                <td>@String.Format("{0:0,0}", @item.dThanhtien)</td>
                <td>  <a href="@Url.Action("Details", "SonStore", new { id = @item.iMason })">Chi Tiết</a></td>
                <td> @Html.ActionLink("Xoá", "XoaGiohang", new { @iMaSP = item.iMason })</td>
                <td><input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }


    <tr style="text-align:center;font-weight:bold;color:red">
        <td colspan="4">Số Lượng Giày:@ViewBag.Tongsl</td>
        <td colspan="5">Tổng Số Tiền:@String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>



    </tr>
    <tr style="font-weight:bold;color:lavenderblush;text-align:right">
        <td colspan="9">
            @Html.ActionLink("Huỷ Giỏ Hàng", "XoaHetGiohang")
        </td>
    </tr>
    <tr style="font-weight:bold;color:lavenderblush;text-align:right">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "Dathang", "Giohang")
        </td>
    </tr>

</table>




