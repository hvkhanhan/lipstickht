@model IEnumerable<WebBanSon.Models.Son>
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/Layoutnguoidung.cshtml";
}


<h3 style="text-align:center;color:#000000">SON THEO LOẠI</h3>
<div class="col-lg-12">

    @foreach (var son in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">

                <a href="@Url.Action("Details", "SonStore", new { id = son.MaSon })">

                    <img alt="@son.TenSon" src="~/HinhSP/@son.AnhBia" width="170" height="170" />


                    <div>
                        <br />
                        <h4 style="text-align:center">
                            @son.TenSon
                        </h4>
                        <h4 style="text-align:center">
                            @son.GiaBan
                        </h4>
                        @*<h4 style="text-align:center">
                            @son.MoTa
                        </h4>*@
                        <h4 style="text-align:center">
                            @son.NgayCapNhat
                        </h4>

                        <p></p>

                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star "></span>
                            <span class="glyphicon glyphicon-star "></span>
                            <span class="glyphicon glyphicon-star "></span>
                            <span class="glyphicon glyphicon-star "></span>
                            <span class="glyphicon glyphicon-star "></span>

                        </p>

                    </div>



            </div>
        </div>
    }

</div>
