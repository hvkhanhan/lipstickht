@model WebBanSon.Models.LoaiSon

@{
    ViewBag.Title = "xoaloaison";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa Loại Son</h2>

<h3>Bạn chắc có muốn xóa loại son này ?</h3>
