@model WebBanSon.Models.LoaiSon

@{
    ViewBag.Title = "sualoaison";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa Loại Son</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.TenLoaiSon, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="txt_TenSP" name="txt_TenSP" class="textCtrl" required="required" value="@Model.TenLoaiSon" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
